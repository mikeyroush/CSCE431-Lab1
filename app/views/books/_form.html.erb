<%= error_messages_for(f.object) %>

<table summary="Book form fields">
    <tr>
        <th>Title</th>
        <td><%= f.text_field :title %></td>
    </tr>
    <tr>
        <th>Author</th>
        <td><%= f.text_field :author %></td>
    </tr>
    <tr>
        <th>Genre</th>
        <% genres = ['Fantasy', 'Science Fiction', 'Action & Adventure', 'Mystery', 'Horror', 'Historical', 'Romance', 'Christian'] %>
        <td><%= f.select :genre, genres.sort %></td>
    </tr>
    <tr>
        <th>Price ($)</th>
        <td><%= f.text_field :price %></td>
    </tr>
    <tr>
        <th>Published Date</th>
        <td><%= f.date_select :published_date, start_year: Date.today.year, end_year: Date.today.year - 150 %></td>
    </tr>
</table>