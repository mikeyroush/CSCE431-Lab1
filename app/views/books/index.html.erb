<div class="subjects_index">
    <h2>Books</h2>

    <%= link_to "Add New Book", new_book_path, class: 'action_new' %>

    <table>
        <tr class="header">
            <th>Title</th>
            <th>Genre</th>
            <th>Actioins</th>
        </tr>

        <% @books.each do |book| %>
        <tr>
            <td><%= book.title %></td>
            <td><%= book.genre %></td>
            <td>
                <%= link_to "Show", book_path(book), class: 'action_show' %>
                <%= link_to "Edit", edit_book_path(book), class: 'action_edit' %>
                <%= link_to "Delete", delete_book_path(book), class: 'action_delete' %>
            </td>
        </tr>
        <% end %>
    </table>
</div>